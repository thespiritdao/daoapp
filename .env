# Environment Variables for DAO App

# Coinbase Smart Wallet Configuration
COINBASE_WALLET_APP_ID=your_app_id_here
COINBASE_WALLET_API_KEY=your_api_key_here
COINBASE_WALLET_CLIENT_ID=your_client_id_here
COINBASE_WALLET_CLIENT_SECRET=your_client_secret_here
COINBASE_WALLET_REDIRECT_URI=http://localhost:3000/auth/coinbase/callback

# Unlock Protocol Configuration
UNLOCK_PROTOCOL_NETWORK=mainnet
UNLOCK_PROTOCOL_LOCK_ADDRESS=your_lock_address_here
UNLOCK_PROTOCOL_RPC_URL=https://mainnet.infura.io/v3/your-infura-project-id
UNLOCK_PROTOCOL_LOCK_ADDRESS_MAINNET=your_mainnet_lock_address_here
UNLOCK_PROTOCOL_LOCK_ADDRESS_RINKEBY=your_rinkeby_lock_address_here

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Database Configuration
DB_CONNECTION_STRING=your_database_connection_string_here

# Stripe API Key (for fiat payments)
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# $SELF Token Contract Address
SELF_TOKEN_ADDRESS=your_self_token_contract_address_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Infura Configuration (for Ethereum interactions)
INFURA_PROJECT_ID=your_infura_project_id_here
INFURA_PROJECT_SECRET=your_infura_project_secret_here

# Web3 Provider URL
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your-infura-project-id

# DAO Configuration
DAO_NAME=YourDAOName
DAO_SYMBOL=YDS
DAO_DECIMALS=18
DAO_INITIAL_SUPPLY=1000000

# IPFS Configuration (for storing DAO-related data)
IPFS_PROJECT_ID=your_ipfs_project_id_here
IPFS_PROJECT_SECRET=your_ipfs_project_secret_here
IPFS_GATEWAY=https://ipfs.io/ipfs/